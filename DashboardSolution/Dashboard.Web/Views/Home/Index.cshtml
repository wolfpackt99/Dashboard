@{
    ViewBag.Title = "Index";
}


<div ng-controller="homeController">
    <br />
    <br />
    <div class="row">
        <div class="col-md-8">
            <h2>
                {{title}}
            </h2>
        </div>
    </div>
    <div>
        <input type="text" id="path" value="r17\s2" class="form-control" ng-model="path" /><button type="submit" class="btn btn-default" ng-click="doSomething()">update</button>
    </div>
    

    <div ng-repeat="item in stuff" class="">
        <div class="progress">
            <div class="progress-bar" style="width: {{item.Hours/total*100}}%; min-width: 2%;" aria-valuenow="{{item.Hours/total*100}}" aria-valuemin="0" aria-valuemax="100" role="progressbar">
                <span>{{item.Hours}}</span>
            </div>
            <span class="badge pull-right">{{item.ActivityType}} </span>
        </div>
    </div>

    <span>Total Hours Remaining: {{total}}</span>

</div>

