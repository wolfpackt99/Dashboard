@{
    ViewBag.Title = "Index";
}


<div ng-controller="homeController">
    <div class="page-header">
        <h2>{{title}}</h2>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form class="form-inline">
                <div class="form-group">
                    <input type="text" id="path" value="" class="form-control" ng-model="path" /><button type="submit" class="btn btn-default" ng-click="doSomething()">submit</button>
                </div>
            </form>
        </div>
    </div>

    <div ng-repeat="item in stuff" class="row">
        <div class="col-md-12">
            <div>{{item.ActivityType}}</div>
            <div class="progress">
                <div class="progress-bar" style="width: {{item.Hours/total*100}}%; min-width: 2%;" aria-valuenow="{{item.Hours/total*100}}" aria-valuemin="0" aria-valuemax="100" role="progressbar">
                    <span>{{item.Hours}}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <span>Total Hours Remaining: {{total}}</span>
        </div>
    </div>

</div>
